<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="MBUSA" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://mbusa.com"/>

    <test name="Vehicle Page">
        <classes>
            <class name="TestVehiclePage"/>
        </classes>
    </test>

    <test name="Shopping Page">
        <classes>
            <class name="TestShoppingPage"/>
        </classes>
    </test>

    <test name="Inventory Page">
        <classes>
            <class name="TestInventoryPage"/>
        </classes>
    </test>

</suite>
