<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="BankOfAmerica" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://bankofamerica.com"/>

    <test name="Bank Of America - ContactUs">
        <classes>
            <class name="TestContactUsPage"/>
        </classes>
    </test>

    <test name="Bank Of America - WealthManagement">
        <classes>
            <class name="TestWealthManagementPage"/>
        </classes>
    </test>

    <test name="Bank Of America - SmallBusiness">
        <classes>
            <class name="TestSmallBusinessPage"/>
        </classes>
    </test>

</suite>
