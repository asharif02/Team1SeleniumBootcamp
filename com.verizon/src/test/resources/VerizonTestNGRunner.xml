<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Verizon" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://verizon.com"/>

    <test name="Business Page - Shop">
        <classes>
            <class name="business_page.TestBusinessShopPage"/>
        </classes>
    </test>

    <test name="Accessories Page - Phone and Tablet">
        <classes>
            <class name="accessories_page.TestAccessories"/>
        </classes>
    </test>

</suite>
